{
    "parser":  "@typescript-eslint/parser",
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "@typescript-eslint"
    ],
    "env": {
        "browser": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "indent": [2, "tab"],
        "no-tabs": 0,
        "react/jsx-indent": [2, "tab"],
        "react/jsx-indent-props": [2, "tab"],
        "react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx"] }]
    }
}